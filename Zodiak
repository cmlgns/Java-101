public static void main(String[] arggs) {

        Scanner gir = new Scanner(System.in);
        System.out.print(" Doğum Yılınızı giriniz");
        int yas = gir.nextInt();
        int sonuc = yas % 12;
        switch (sonuc) {
            case 0: System.out.print(" Çin Takvimine göre Maymun Burcundasınız"); break;
            case 1: System.out.print(" Çin Takvimine göre Horoz Burcundasınız");  break;
            case 2: System.out.print(" Çin Takvimine göre Köpek Burcundasınız"); break;
            case 3: System.out.print(" Çin Takvimine göre Domuz Burcundasınız"); break;
            case 4: System.out.print(" Çin Takvimine göre Fare Burcundasınız"); break;
            case 5: System.out.print(" Çin Takvimine göre Öküz Burcundasınız");  break;
            case 6: System.out.print(" Çin Takvimine göre Kaplan Burcundasınız"); break;
            case 7: System.out.print(" Çin Takvimine göre Tavşan Burcundasınız");  break;
            case 8: System.out.print(" Çin Takvimine göre Ejderha Burcundasınız"); break;
            case 9: System.out.print(" Çin Takvimine göre Yılan Burcundasınız");  break;
            case 10: System.out.print(" Çin Takvimine göre At Burcundasınız"); break;
            case 11: System.out.print(" Çin Takvimine göre Koyun Burcundasınız");  break;

        }
    }
}
